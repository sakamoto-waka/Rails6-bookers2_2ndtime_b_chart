<div class='container px-5 px-sm-0'>
  <%= render 'layouts/errors', obj: @book %>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'index', books: @books%>
      <h2>投稿数の前日比・前週比</h2>
    <table class="table table-bordered">
      <thead>
        <th>今日の投稿数</th>
        <th>前日の投稿数</th>
        <th>前日比</th>
      </thead>
      <tbody>
        <th><%= @today_book.count_even_zero %></th>
        <th><%= @yesterday_book.count_even_zero %></th>
        <th>
          <% if (@today_book && @yesterday_book).blank? %>
            投稿がない日があります
          <% else %>
            <%= @the_day_before.round %>%
          <% end %>
          </th>
      </tbody>

         <th>今週の投稿数</th>
        <th>先週の投稿数</th>
        <th>前週比</th>
      </thead>
       <tbody>
        <th><%= @this_week_book.count_even_zero %></th>
        <th><%= @last_week_book.count_even_zero %></th>
        <th>
          <% if (@this_week_book && @last_week_book).blank? %>
            投稿がない日があります
          <% else %>
            <%= @the_week_before.round %>%
          <% end %>
        </th>
      </tbody>

    </table>
    </div>
  </div>
</div>