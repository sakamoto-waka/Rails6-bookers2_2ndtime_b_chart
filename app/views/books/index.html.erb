<div class='container px-5 px-sm-0'>
  <%= render 'layouts/errors', obj: @book %>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'index', books: @books %>
      <!--<h2>投稿数の前日比・前週比</h2>-->
      <h2>7日間分の投稿数</h2>
      <table class="table table-bordered">
      <!--  <#%= render 'books/books_stats', today_book: @today_book, -->
      <!--                                  yesterday_book: @yesterday_book,-->
      <!--                                  the_day_before: @the_day_before,-->
      <!--                                  this_week_book: @this_week_book,-->
      <!--                                  last_week_book: @last_week_book,-->
      <!--                                  the_week_before: @the_week_before %>    -->

      <thead>
        <% (1..6).reverse_each do |day_num| %>
          <th><%= day_num %>日前</th>
        <% end %>
        <th>今日</th>
      </thead>
      <tbody>
        <% @seven_days_book.each do |book_num| %>
          <td><%= book_num %></td>
        <% end %>  
      </tbody>
        <canvas id="myLineChart"></canvas>
  <script>
      $(document).on('turbolinks:load', function() {
      var ctx = document.getElementById("myLineChart");
      var myLineChart = new Chart(ctx, {
        type: 'line',
        data: {
          labels: ['6日前', '5日前', '4日前', '3日前', '2日前', '1日前', '今日'],
          datasets: [
            {
              label: '投稿した本の数',
              backgroundColor: 'rgb(255, 99, 132)',
              borderColor: 'rgb(255, 99, 132)',
              data: <%= @seven_days_book %>,
            }
          ],
        },
        options: {
          title: {
            display: true,
            text: '7日間の投稿数の比較'
          },
          scales: {
            yAxes: [{
              ticks: {
                suggestedMax: 10,
                suggestedMin: 0,
                stepSize: 1,
                callback: function(value, index, values){
                  return  value
                }
              }
            }]
          },
        }
      });
    });
  </script>  
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
      </table>
      
    </div>
  </div>
</div>

